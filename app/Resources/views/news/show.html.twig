{% extends 'base.html.twig' %}

{% block body %}
<div class="card p-5">
    <h4>{{ article.title }}</h4>
        <h6>Main characteristics:</h6>
    <div class="table-responsive">
        <table class="table">
            <thead></thead>
            <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th scope="row">Abstract</th>
                <td>{{ article.abstract }}</td>
            </tr>
            <tr>
                <th scope="row">Date</th>
                <td>{{ article.date |date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th scope="row">Activity</th>
                <td>{{ article.activity |number_format }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <strong>FullText:</strong>
    <br/>
    <p>{{ article.text }}</p>
    <a href="{{ path('news_index') }}">Back to home</a>
</div>
{% endblock %}
